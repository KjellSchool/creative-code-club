---
import Base from "../layouts/Base.astro";
import { getCollection } from "astro:content";

// helper to safely turn frontmatter date into a Date
const toDate = (entry) =>
  entry.data.date instanceof Date ? entry.data.date : new Date(entry.data.date);

let allNews = await getCollection("news");

// sort descending by date (newest first)
allNews = allNews.sort((a, b) => toDate(b) - toDate(a));
---

<Base title="News">
  <div class="container">
    <h2><span>News</span></h2>
    <p class="code">The third digit of the code is 3</p>
    <ul>
      {
        allNews.map((item) => {
          const d = toDate(item);
          return (
            <li>
              <article>
                <h3>{item.data.title}</h3>
                <time datetime={d.toISOString()}>{d.toDateString()}</time>
                <div class="md">{item.body}</div>
              </article>
            </li>
          );
        })
      }
    </ul>
  </div>
</Base>

<style>
  ul > li:not(:last-child) {
    border-bottom: solid grey 1px;
    padding-bottom: var(--sp-l);
    margin-bottom: var(--sp-xl);
  }

  h3 {
    margin-bottom: var(--sp-2xs);
  }

  time {
    display: block;
    margin-bottom: var(--sp-l);
  }
</style>
